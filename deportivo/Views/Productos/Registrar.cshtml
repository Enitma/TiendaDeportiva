@model Producto

<h1>Registro de Producto</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" class="form-control">
    </div>
    <div class="form-group">
        <label>Categor√≠a</label>
        <select asp-for="CategoriaId" class="form-control">
            @foreach(var cat in (List<Categoria>)ViewBag.Categorias) {
                <option value="@cat.Id">@cat.Nombre</option>
            }
        </select>
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>